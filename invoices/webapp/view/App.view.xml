    <Shell>
        <App>
            <pages>
                <Page title="{i18n>appTitle}">
                    <headerContent>
                        <Button id="helloDialogHeader" 
                        icon="sap-icon://action" 
                        press=".onOpenDialogHeader" 
                        class="sapUiSmallMarginEnd" />
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="logaligroup.invoices.view.HelloPanel" />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
